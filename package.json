{
  "name": "auth",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "docker:dev": "docker-compose -f docker/docker-compose.development.yml up",
    "docker:dev:rebuild": "docker-compose -f docker/docker-compose.development.yml build",
    "docker:debug": "docker-compose -f docker/docker-compose.development.yml -f docker/docker-compose.debug.yml up",
    "docker:prod": "docker-compose -f ./docker/docker-compose.prod.local.yml build --no-cache && docker-compose -f ./docker/docker-compose.prod.local.yml up",
    "build:prod": "rm -rf ./build && yarn tsc",
    "start:prod": "yarn build:prod && NODE_ENV=production node ./build/index.js",
    "test": "jest --watchAll --verbose",
    "test:debug": "node --inspect node_modules/.bin/jest --watchAll --runInBand",
    "bcrypt": "npm rebuild bcrypt@3.0.7 --update-binary"
  },
  "dependencies": {
    "bcrypt": "3.0.7",
    "fastify": "2.11.0",
    "jwt-simple": "0.5.6",
    "mongoose": "5.8.3",
    "ramda": "0.26.1"
  },
  "devDependencies": {
    "@types/bcrypt": "3.0.0",
    "@types/jest": "24.0.25",
    "@types/jwt-simple": "0.5.33",
    "@types/mongoose": "5.5.36",
    "@types/node": "13.1.1",
    "@types/ramda": "0.26.39",
    "@types/supertest": "2.0.8",
    "jest": "24.9.0",
    "jest-date-mock": "1.0.7",
    "mongodb-memory-server": "6.2.1",
    "nodemon": "2.0.2",
    "pino-pretty": "3.5.0",
    "supertest": "4.0.2",
    "ts-jest": "24.2.0",
    "ts-node": "8.5.4",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.7.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/dist/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "roots": [
      "./src"
    ],
    "setupFiles": [
      "jest-date-mock"
    ]
  },
  "prettier": {
    "singleQuote": true
  }
}
